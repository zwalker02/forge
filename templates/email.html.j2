<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ subject }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; margin:0; background:#f6f8fb; }
    .wrap { max-width: 800px; margin:0 auto; padding:24px; }
    .card { background:#fff; border-radius:16px; box-shadow:0 2px 10px rgba(0,0,0,.06); padding:24px; }
    h1 { font-size:22px; margin:0 0 12px; }
    h2 { font-size:18px; margin:24px 0 12px; }
    .pill { display:inline-block; padding:4px 8px; border-radius:999px; background:#eef2ff; font-size:12px; }
    .story { margin-bottom:22px; }
    .story h3 { margin:0; font-size:16px; }
    .story h3 a { color:#1a56db; text-decoration:none; }
    .meta { color:#6b7280; font-size:12px; margin-top:2px; }
    .summary { font-size:14px; color:#374151; margin-top:6px; }
    .why { font-size:14px; font-weight:600; margin-top:6px; }
    .footer { color:#6b7280; font-size:12px; margin-top:24px; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card">
      <div class="pill">{{ week_range }}</div>
      <h1>{{ subject }}</h1>
      <p>{{ intro }}</p>

      <h2>Macro</h2>
      {% for it in macro %}
        <div class="story">
          <h3><a href="{{ it.url }}">{{ it.title }}</a></h3>
          {% if it.published %}<div class="meta">{{ it.published }}</div>{% endif %}
          <div class="summary">{{ it.summary }}</div>
          <div class="why">{{ it.why }}</div>
        </div>
      {% endfor %}

      <h2>Markets</h2>
      {% for it in markets %}
        <div class="story">
          <h3><a href="{{ it.url }}">{{ it.title }}</a></h3>
          {% if it.published %}<div class="meta">{{ it.published }}</div>{% endif %}
          <div class="summary">{{ it.summary }}</div>
          <div class="why">{{ it.why }}</div>
        </div>
      {% endfor %}

      <h2>Companies</h2>
      {% for it in companies %}
        <div class="story">
          <h3><a href="{{ it.url }}">{{ it.title }}</a></h3>
          {% if it.published %}<div class="meta">{{ it.published }}</div>{% endif %}
          <div class="summary">{{ it.summary }}</div>
          <div class="why">{{ it.why }}</div>
        </div>
      {% endfor %}

      <div class="footer">Sent automatically. Reply to reach the humans.</div>
    </div>
  </div>
</body>
</html>
