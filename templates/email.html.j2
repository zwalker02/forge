<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ subject }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; margin:0; background:#f6f8fb; }
    .wrap { max-width: 800px; margin:0 auto; padding:24px; }
    .card { background:#fff; border-radius:16px; box-shadow:0 2px 10px rgba(0,0,0,.06); padding:24px; }
    h1 { font-size:22px; margin:0 0 12px; }
    h2 { font-size:18px; margin:24px 0 8px; }
    .pill { display:inline-block; padding:4px 8px; border-radius:999px; background:#eef2ff; font-size:12px; }
    .item { margin-bottom:12px; }
    .sources a { color:#3366cc; text-decoration:none; }
    .footer { color:#6b7280; font-size:12px; margin-top:24px; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card">
      <div class="pill">{{ week_range }}</div>
      <h1>{{ subject }}</h1>
      <p>{{ intro }}</p>

      <h2>Macro</h2>
      {% for it in macro %}<div class="item">{{ it|safe }}</div>{% endfor %}

      <h2>Markets</h2>
      {% for it in markets %}<div class="item">{{ it|safe }}</div>{% endfor %}

      <h2>Companies</h2>
      {% for it in companies %}<div class="item">{{ it|safe }}</div>{% endfor %}

      <h2>Sources</h2>
      <ul class="sources">
      {% for s in sources %}
        <li><a href="{{ s.url }}">{{ s.name }}</a> â€” {{ s.note }}</li>
      {% endfor %}
      </ul>

      <div class="footer">Sent automatically. Reply to reach the humans.</div>
    </div>
  </div>
</body>
</html>
